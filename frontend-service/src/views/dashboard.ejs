                    <button class="btn-small" type="submit">
                      <span><i class="fad fa-arrows"></i></span>Move
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <!-- Task Title -->
            <h3 class="task-title text-xl">
              <!-- EJS Render -->
            </h3>
            <!-- Task Subtitle -->
