<section class="wrapper-main">
  <!-- Sidebar -->
  <!-- onmouseover="toggleSidebar()" onmouseout="toggleSidebar()" -->
  <div id="mySidebar" class="sidebar">
    <a href="#"><i class="far fa-home"></i><span class="icon-text">Dashboard</span></a>
    <a href="#"><i class="far fa-user"></i><span class="icon-text"> User Profile</span></a>
    <a href="#"><i class="far fa-users"></i><span class="icon-text">Team</span></a>
    <a href="#"><i class="far fa-calendar-alt"></i><span class="icon-text">Calender</span></a>
    <a href="#"><i class="far fa-chart-bar"></i><span class="icon-text">Reports</span></a>
  </div>
  <!-- Main Section -->
  <section class="main-section">
    <section class="dashboard-header">
      <div class="search-bar">
        <i class="far fa-search"></i>
        <form action="/search" method="POST">
          <input type="text" placeholder="Search..." />
        </form>
      </div>
      <div class="user-info">
        <p><%= user.firstName %> <%= user.lastName %></p>
        <a class="btn-light" href="/user/logout"><i class="far fa-sign-out-alt"></i>Logout</a>
      </div>
    </section>
    <div class="main-thing">
      <div class="main-thing-heading">
        <h3 class="font-semibold"><i class="far fa-tasks"></i> My Dashboard</h3>
        <label id="add-new" for="modal-1" class="btn-semiDark"><i class="far fa-plus-circle"></i> Add New</label>
        <input class="modal-state" id="modal-1" type="checkbox" />
        <!-- MODAL FOR NEW TASK -->
        <div class="modal" id="modal">
          <label class="modal__bg" for="modal-1"></label>
          <div class="modal__inner">
            <!-- First row with Add new task, two buttons -->
            <div class="flex justify-between items-center modal__header">
              <div class="flex">
                <h4 class="font-medium">
                  <i class="far fa-plus-square" style="margin-right: 1rem; margin-left: 1rem"></i>
                  Add a New Task
                </h4>
              </div>

            </div>
            <!-- Three coloumns layout -->
            <form action="/dashboard/new" method="POST" id="form">
              <div class="flex mb-4">
                <!-- Date Column -->
                <div class="w-1/4">
                  <label for="date">Due Date</label>
                  <input type="date" name="date">
                </div>
                <!-- Form Column -->
                <div class="w-2/4 px-8">
                  <!-- Main form -->
                  <div class="form-control">
                    <label for="taskname">Task</label>
                    <input type="text" id="title" name="title" placeholder="Task Title">
                  </div>
                  <div class="form-control">
                    <label for="tasksub">Subtitle</label>
                    <input type="text" id="subtitle" name="subtitle" placeholder="Subtitle">
                  </div>
                  <div class="form-control">
                    <label for="taskname">Description</label>
                    <!-- <input type="text" id="taskDesc" name="taskDesc" placeholder="Description"> -->
                    <textarea name="description" id="" cols="30" rows="5" placeholder="You can include brief description of your task"></textarea>
                  </div>
                </div>
                <!-- Tags Column -->
                <div class="w-1/4">
                  <label for="tags">Additional Tags</label>
                  <input type="text" name="tags">
                </div>
              </div>

              <div class="flex submit_handler">
                <button class="btn-green btn-xsmall" id="submit" type="submit">
                  Create
                </button>
                <label class="modal__close" for="modal-1" id="modal_close"></label>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Main Container -->
    <div class="ml-4 mr-4">
      <div class="w-full sm:w-full">
        <%- include('partials/notification')  %>
      </div>
    </div>
    <div class="flex flex-wrap w-full container-wrapper px-2">
      <!-- User Profile -->
      <div class="w-full sm:w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mb-4">
        <div class="card-wrapper px-2">
          <p class="text-center font-bold text-xl uppercase">User Profile</p>
          <form action="/dashboard/profile/current" method="POST" class="box" id="form">
            <div id="user-profile-form-control" class="bg-white shadow rounded-lg p-4">
              <div class="mb-4">
                <label class="block font-bold text-gray-700 mb-2" for="firstName">First Name</label>
                <input id="firstName" name="firstName" class="form-input w-full rounded-md border-gray-300 focus:border-indigo-500" type="text" placeholder="<%= user.firstName %>" />
              </div>
              <div class="mb-4">
                <label class="block font-bold text-gray-700 mb-2" for="lastName">Last Name</label>
                <input id="lastName" name="lastName" class="form-input w-full rounded-md border-gray-300 focus:border-indigo-500" type="text" placeholder="<%= user.lastName %>" />
              </div>
              <div class="mb-4">
                <label class="block font-bold text-gray-700 mb-2" for="email">Email</label>
                <input id="email" name="email" class="form-input w-full rounded-md border-gray-300 focus:border-indigo-500" type="email" placeholder="<%= user.email %>" />
              </div>
              <div class="mb-4">
                <label class="block font-bold text-gray-700 mb-2" for="password">Password</label>
                <input id="password" name="password" class="form-input w-full rounded-md border-gray-300 focus:border-indigo-500" type="password" placeholder="Enter Current Password" required />
              </div>
              <div class="flex justify-center">
                <button id="update-profile-btn" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                  Update Profile
                </button>
              </div>

            </div>
          </form>
        </div>
      </div>

      <!-- Ongoing Tasks -->
      <div class="w-full sm:w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mb-4">
        <div class="card-wrapper">
