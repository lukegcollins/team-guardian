                <span class="task-category">

                </span>

              </div>
              <!-- DROPDOWN MENU FOR CARD :DD -->
              <div class="dropdown">
                <!-- <i class="dropbtn fa"></i> -->
                <span class="menu-holder">
                  <i class="fal fa-ellipsis-h-alt"></i>
                </span>
                <div class="dropdown-content">

                  <!-- EDIT FUNCTION -->
